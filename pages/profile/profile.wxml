<view class="container" wx:if="{{userInfo}}">
  <view class="header">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      <view class="info">
        <text class="nickname">{{userInfo.nickName}}</text>
        <text class="id">ID: {{userInfo.openId || '未设置'}}</text>
      </view>
    </view>
    <view class="settings" bindtap="goToSettings">
      <text class="icon">⚙️</text>
    </view>
  </view>

  <view class="statistics">
    <view class="stat-item" bindtap="goToMyMoments">
      <text class="number">{{statistics.moments}}</text>
      <text class="label">动态</text>
    </view>
    <view class="stat-item" bindtap="goToMyReviews">
      <text class="number">{{statistics.reviews}}</text>
      <text class="label">评价</text>
    </view>
    <view class="stat-item">
      <text class="number">{{statistics.likes}}</text>
      <text class="label">获赞</text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="goToMyMoments">
      <view class="menu-content">
        <text class="icon">📝</text>
        <text class="label">我的动态</text>
      </view>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToMyReviews">
      <view class="menu-content">
        <text class="icon">⭐</text>
        <text class="label">我的评价</text>
      </view>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <view class="menu-content">
        <text class="icon">❤️</text>
        <text class="label">我的收藏</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="goToSettings">
      <view class="menu-content">
        <text class="icon">⚙️</text>
        <text class="label">设置</text>
      </view>
      <text class="arrow">></text>
    </view>
    <view class="menu-item">
      <view class="menu-content">
        <text class="icon">📞</text>
        <text class="label">联系客服</text>
      </view>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="logout" bindtap="handleLogout">
    退出登录
  </view>
</view> 