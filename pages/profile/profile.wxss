.container {
  min-height: 100vh;
  background: #f6f6f6;
}

/* 顶部背景和用户信息 */
.profile-header {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 60rpx 40rpx;
  color: #fff;
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  margin-left: 40rpx;
  flex: 1;
}

.nickname {
  font-size: 44rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  display: block;
}

.user-id {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 数据统计 */
.stats-section {
  background: #fff;
  display: flex;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background: #eee;
}

.stat-num {
  font-size: 44rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #999;
}

/* 功能列表 */
.menu-section {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.menu-group {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-group:last-child {
  margin-bottom: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 24rpx;
}

.iconfont {
  font-size: 44rpx;
  color: #666;
}

.icon-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 退出登录按钮 */
.logout-section {
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
  background: #fff;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  background: #fff;
  color: #ff4d4f;
  font-size: 36rpx;
  border-radius: 48rpx;
  border: 2rpx solid #ff4d4f;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.logout-btn:active {
  opacity: 0.8;
  background: #fff5f5;
} 