.container {
  padding: 0;
  background: #000;
  min-height: 100vh;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #1a1a1a;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #333;
  z-index: 100;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #333;
  border-radius: 50%;
}

.refresh-btn .iconfont {
  font-size: 36rpx;
  color: #fff;
}

.moments-list {
  padding: 108rpx 30rpx 0;
  box-sizing: border-box;
  height: 100vh;
}

.moment-item {
  background: #1a1a1a;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.nickname {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.content {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.images-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.image-item {
  width: 100%;
  height: 220rpx;
  border-radius: 8rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  align-items: center;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 32rpx;
  font-size: 24rpx;
  color: #666;
}

.action-item.liked {
  color: #ff4d4f;
}

.action-item .iconfont {
  font-size: 32rpx;
  margin-right: 4rpx;
}

.count {
  font-size: 24rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading-state {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.publish-btn .iconfont {
  color: #fff;
  font-size: 48rpx;
}

.comments {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #222;
  border-radius: 8rpx;
}

.comment-item {
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.comment-user {
  color: #1296db;
  font-weight: 500;
}

.comment-content {
  color: #fff;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  background: #333;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.action-btn::before {
  content: '';
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.like-btn::before {
  background-image: url('data:image/svg+xml;base64,');
}

.comment-btn::before {
  background-image: url('data:image/svg+xml;base64,');
}

.like-btn.active {
  color: #ff4d4f;
}

.like-btn.active::before {
  background-image: url('data:image/svg+xml;base64,');
}

/* 评论输入框样式 */
.comment-input-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  z-index: 1000;
  border-top: 1rpx solid #333;
}

.comment-input-container.show {
  transform: translateY(0);
}

.comment-input-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #333;
}

.comment-input-title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}

.comment-input-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #1a1a1a;
  color: #fff;
}

.cancel-btn {
  background: #333;
}

.submit-btn {
  background: #1890ff;
}

.comment-input-content {
  padding: 30rpx;
}

.comment-input {
  width: 100%;
  min-height: 200rpx;
  background: #1a1a1a;
  border-radius: 12rpx;
  padding: 20rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 1.6;
}

.comment-input-placeholder {
  color: #666;
}

.comment-input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.image-uploader {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 24rpx;
  background: #1a1a1a;
  border-radius: 8rpx;
}

.image-uploader .iconfont {
  font-size: 32rpx;
  color: #fff;
}

.upload-text {
  font-size: 28rpx;
  color: #fff;
}

.word-count {
  font-size: 24rpx;
  color: #666;
} 