.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.info-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.category {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.rating-row {
  display: flex;
  align-items: center;
}

.stars {
  display: flex;
  margin-right: 10rpx;
}

.star {
  color: #ffd700;
  font-size: 24rpx;
}

.rating {
  font-size: 24rpx;
  color: #333;
  margin-right: 10rpx;
}

.review-count {
  font-size: 24rpx;
  color: #999;
}

.detail-list {
  margin-bottom: 30rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.phone {
  color: #1296db;
}

.description {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.desc-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.reviews-section {
  background: #fff;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.write-review {
  font-size: 28rpx;
  color: #1296db;
}

.review-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.review-item:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.review-info {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.review-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.review-image {
  width: calc(33.33% - 20rpx);
  height: 200rpx;
  margin: 10rpx;
  border-radius: 8rpx;
}

.review-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.like-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
  transition: all 0.3s;
}

.like-btn.liked {
  background: #ffeef0;
}

.like-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 8rpx;
}

.like-btn.liked .like-icon {
  color: #ff4d4f;
}

.like-count {
  font-size: 24rpx;
  color: #999;
}

.like-btn.liked .like-count {
  color: #ff4d4f;
}

.loading {
  text-align: center;
  padding: 30rpx;
}

.loading text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
}

.no-more text {
  font-size: 26rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 60rpx 30rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
} 