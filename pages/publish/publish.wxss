.container {
  min-height: 100vh;
  background: #000;
}

.header {
  padding: 20rpx 0;
  background: #1a1a1a;
  margin-bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin: 0 auto 10rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #333;
  border-radius: 40rpx;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #222;
  margin-top: 10rpx;
}

.cancel {
  font-size: 30rpx;
  color: #999;
}

.publish {
  font-size: 30rpx;
  color: #1890ff;
  padding: 10rpx 30rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 30rpx;
}

.content {
  padding: 0 30rpx;
}

.input {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #fff;
  background: #1a1a1a;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: flex-start;
}

.image-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image {
  width: 220rpx;
  height: 220rpx;
  background: #1a1a1a;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #333;
}

.add-image .icon {
  font-size: 60rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.add-image .text {
  font-size: 24rpx;
  color: #666;
} 