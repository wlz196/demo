.container {
  height: 100vh;
  background: #f8f8f8;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.categories {
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  white-space: nowrap;
  display: flex;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  z-index: 99;
}

.category-item {
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.category-item.active {
  color: #1296db;
  font-weight: 500;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.places-list {
  margin-top: 176rpx;
  height: calc(100vh - 176rpx);
  box-sizing: border-box;
}

.place-item {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.cover {
  width: 100%;
  height: 300rpx;
}

.info {
  padding: 20rpx;
}

.name-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.category {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.stars {
  display: flex;
  margin-right: 10rpx;
}

.star {
  color: #ffd700;
  font-size: 24rpx;
}

.rating {
  font-size: 24rpx;
  color: #333;
  margin-right: 10rpx;
}

.review-count {
  font-size: 24rpx;
  color: #999;
}

.address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.description {
  font-size: 26rpx;
  color: #999;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
} 